{
  "name": "preservation-workspace",
  "displayName": "Preservation",
  "shortName": "preservation",
  "version": "0.0.7",
  "main": "/src/main.tsx",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "fusion-framework-cli app dev",
    "windows-zip": "powershell Compress-Archive -Path dist/app-bundle.js, dist/app-manifest.json -DestinationPath dist/bundle.zip",
    "build": "tsc -b",
    "build:spa": "vite build && node ../../internals/make-app-manifest.js",
    "postbuild:spa": "zip dist/bundle.zip -Dj dist/app-bundle.js app-manifest.json",
    "deploy:spa": "fdev portal upload -e ci -k preservationanalytics dist/bundle.zip",
    "postdeploy:spa": "fdev portal publish -e ci -k preservationanalytics",
    "bump": "pnpm version patch",
    "shipit": "pnpm bump && pnpm build && pnpm build:spa && node ../../internals/git/commit-release.js && pnpm windows-zip && pnpm deploy:spa && node ../../internals/git/push-changes.js"
  },
  "dependencies": {
    "@cc-components/powerbi": "workspace:^",
    "@cc-components/shared": "workspace:^"
  },
  "files": [
    "dist/app-bundle.js",
    "app-manifest.json"
  ]
}
