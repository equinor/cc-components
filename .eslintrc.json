{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": ["**/*"],
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "no-self-compare": "error",
    "prefer-const": "warn",
    "no-lone-blocks": "error",
    "no-loop-func": "error",
    "no-console": "warn"
  }
}
