{
  "name": "workorder",
  "version": "1.0.0",
  "main": "/src/main.tsx",
  "type": "module",
  "scripts": {
    "dev": "fusion-framework-cli app dev",
    "windows-zip": "powershell Compress-Archive -Path dist/app-bundle.js, app-manifest.json -DestinationPath dist/bundle.zip",
    "build": "tsc --noEmit",
    "build:spa": "cross-env NODE_OPTIONS=--max_old_space_size=16096 fusion-framework-cli app build",
    "postbuild:spa": "zip dist/bundle.zip -Dj dist/app-bundle.js app-manifest.json",
    "deploy:spa": "fdev portal upload -e ci -k workorder dist/bundle.zip",
    "postdeploy:spa": "fdev portal publish -e ci -k workorder"
  },
  "dependencies": {
    "@cc-components/shared": "workspace:^",
    "@cc-components/workorderapp": "workspace:^"
  },
  "files": [
    "dist/app-bundle.js",
    "app-manifest.json"
  ]
}
