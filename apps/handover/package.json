{
  "name": "handover",
  "version": "0.0.13",
  "main": "src/main.tsx",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "fusion-framework-cli app dev",
    "windows-zip" : "powershell Compress-Archive -Path dist/app-bundle.js, app-manifest.json -DestinationPath dist/bundle.zip",
    "build": "tsc --noEmit",
    "build:spa": "cross-env NODE_OPTIONS=--max_old_space_size=8048 fusion-framework-cli app build",
    "postbuild:spa": "zip dist/bundle.zip -Dj dist/app-bundle.js app-manifest.json",
    "deploy:spa": "fdev portal upload -e ci -k handover dist/bundle.zip",
    "postdeploy:spa": "fdev portal publish -e ci -k handover"
  }
}
