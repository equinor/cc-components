{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "FusionReportGenerator",
  "title": "Create a Fusion Report",
  "description": "Create a Fusion Report",
  "type": "object",
  "properties": {
    "appKey": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What appKey would you like to use?"
    },
    "reportId": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "What is the global-identifier in Fusion Reports Admin?"
    },
    "displayName": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 2
      },
      "x-prompt": "What is the display name in Fusion?"
    },
    "directory": { 
      "type": "string",
      "description": "A directory where the project is placed"
    }
  },
  "required": ["appKey", "reportId", "displayName"]
}
