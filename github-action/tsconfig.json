{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules"]
}
